<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<project name="Translator" default="default">

    <!-- Properties -->

    <property name="styledir" value="C:\xampp\php\data\phing\etc"/>

    <!-- Filesets -->

    <fileset id="php-sources" dir=".">
        <include name="admin.php"/>
        <include name="classes/*.php"/>
    </fileset>

    <!-- Checks -->

    <target name="sniff">
        <phpcodesniffer standard="PEAR">
            <fileset refid="php-sources"/>
        </phpcodesniffer>
    </target>

    <target name="compat">
        <exec command="phpcompatinfo --configuration phpcompatinfo.xml print --exclude-pattern translator ."
              logoutput="true"/>
    </target>

    <!-- Tests -->

    <target name="unit-tests">
        <phpunit haltonerror="true" haltonfailure="true">
            <formatter type="plain" usefile="false"/>
            <batchtest>
                <fileset dir="tests/unit">
                    <include name="*Test.php"/>
                </fileset>
            </batchtest>
        </phpunit>
    </target>

    <target name="attack-tests">
        <fail unless="env.CMSIMPLEDIR" message="CMSIMPLEDIR undefined!"/>
        <phpunit haltonerror="true" haltonfailure="true">
            <formatter type="plain" usefile="false"/>
            <batchtest>
                <fileset dir="tests/attack">
                    <include name="*Test.php"/>
                </fileset>
            </batchtest>
        </phpunit>
    </target>

    <!-- Code coverage -->

    <target name="coverage">
        <coverage-setup database="tests/coverage/coverage.db">
            <fileset dir="classes">
                <include name="*.php"/>
            </fileset>
        </coverage-setup>
        <phpunit codecoverage="true">
            <batchtest>
                <fileset dir="tests/unit">
                    <include name="*Test.php"/>
                </fileset>
            </batchtest>
        </phpunit>
        <coverage-report outfile="tests/coverage/coverage.xml">
            <report todir="tests/coverage" styledir="${styledir}"/>
        </coverage-report>
    </target>

    <!-- Build -->

    <target name="build">
        <fail unless="version" message="version is not defined!"/>
        <svnexport revision="" repositoryurl="." todir="export"/>
        <move todir="dist">
            <fileset dir="export">
                <include name="admin.php"/>
                <include name="version.nfo"/>
            </fileset>
            <filterchain>
                <replacetokens>
                    <token key="TRANSLATOR_VERSION" value="${version}"/>
                </replacetokens>
            </filterchain>
        </move>
        <jsMin targetDir="dist" suffix="" failonerror="true">
            <fileset dir="export">
                <include name="translator.js"/>
            </fileset>
        </jsMin>
        <move todir="dist">
            <fileset dir="export">
                <exclude name="tests/**"/>
                <exclude name="build.xml"/>
                <exclude name="phpcompatinfo.xml"/>
                <exclude name="translator.js"/>
            </fileset>
        </move>
        <delete dir="export"/>
        <copy file="dist/config/config.php" tofile="dist/config/defaultconfig.php"/>
        <copy file="dist/languages/en.php" tofile="dist/languages/default.php"/>
        <zip destfile="Translator_XH-${version}.zip" basedir="dist" prefix="translator/"/>
        <delete dir="dist"/>
    </target>

</project>
